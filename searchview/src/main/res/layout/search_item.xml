<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_icon_1"
        android:layout_width="@dimen/search_icon_56"
        android:layout_height="match_parent"
        android:contentDescription="@string/search_app_name"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/search_key_line_8"
        android:paddingLeft="@dimen/search_key_line_8"
        android:paddingEnd="@dimen/search_key_line_8"
        android:paddingRight="@dimen/search_key_line_8">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_14" />

        <TextView
            android:id="@+id/search_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textIsSelectable="false"
            tools:textSize="@dimen/search_text_12" />

    </LinearLayout>

    <ImageView
        android:id="@+id/search_icon_2"
        android:layout_width="@dimen/search_icon_56"
        android:layout_height="match_parent"
        android:contentDescription="@string/search_app_name"
        android:scaleType="center" />

</LinearLayout>